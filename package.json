        "wasm-pack": "^0.10.1",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "comlink": "^4.3.1",
        "stats.js": "^0.17.0",
        "wasm-feature-detect": "^1.2.11"
    }
}